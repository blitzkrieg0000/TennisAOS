@model UserSignInModel
@{
	Layout = "_LayoutSecurity";
}

@section Links{
<link rel="stylesheet" href="~/assets/css/SignIn/this.css" />
}


<section>
	<!-- PARTICLES -->
	<canvas id="particles"></canvas>

	<!-- HEXAGON GRID -->
	<div id="hexagonGrid"></div>

</section>


<form asp-action="SignIn" method="post" class="p-4 mx-auto w-50 shadow align-middle">
	<input type="hidden" asp-for="@Model.ReturnUrl" />
	<div class="mb-3">
		<label>Kullanıcı Adı:</label>
		<span class="text-danger" asp-validation-for="@Model.Username"></span>
		<input asp-for="@Model.Username" class="form-control" />
	</div>

	<div class="mb-3">
		<label>Parola:</label>
		<span class="text-danger" asp-validation-for="@Model.Password"></span>
		<input type="password" asp-for="@Model.Password" class="form-control" />
	</div>

	<div class="form-check">
		<input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe">
		<label class="form-check-label" for="RememberMe">
			Beni Hatırla
		</label>
	</div>

	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Giriş</button>
	</div>

	<div class="text-danger mt-2" asp-validation-summary="ModelOnly">
	</div>
</form>



@section Scripts{
<!--TODO: Fancybox CDN yerine NPM kullanılacak-->
<script src="~/assets/js/SignIn/this.js"></script>
}